        format = "<span background='#50fa7b' color='#123456'> BATTERY </span><span background='#404040'> %status %percentage %remaining %emptytime </span> "
	format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
